{
  "expo": {
    "name": "expo-native-fonts-example",
    "slug": "expo-native-fonts-example",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "expo.modules.nativefonts.example"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "expo.modules.nativefonts.example"
    },
    "plugins": [
      [
        "../app.plugin.js",
        {
          "srcFolder": "./fonts",
          "fonts": [
            {
              "filePath": "Montserrat/Montserrat-Black.ttf",
              "targets": ["exponativefontsexampleWidgetExtension"],
              "platform": "ios"
            },
            {
              "filePath": "Montserrat/Montserrat-BlackItalic.ttf",
              "targets": ["exponativefontsexampleWidgetExtension"],
              "platform": "ios"
            },
            {
              "filePath": "Montserrat/Montserrat-Bold.ttf",
              "targets": ["exponativefontsexampleWidgetExtension"],
              "platform": "ios"
            },
            {
              "filePath": "Montserrat/Montserrat-BoldItalic.ttf",
              "targets": ["exponativefontsexampleWidgetExtension"],
              "platform": "ios"
            }
          ]
        }
      ],
      [
        "@bittingz/expo-widgets",
        {
          "ios": {
            "src": "./widgets/ios",
            "mode": "development",
            "moduleDependencies": ["MyData.swift"]
          },
          "android": {
            "src": "./widgets/android",
            "widgets": [
              {
                "name": "SampleWidget",
                "reourceName": "@xml/sample_widget_info"
              }
            ]
          }
        }
      ]
    ],
    "extra": {
      "projectId": "198071ab-2ac3-4c30-b45a-d6f3ba4d7983"
    }
  }
}
